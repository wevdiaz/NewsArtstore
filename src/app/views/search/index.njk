{% extends "layout.njk" %}

{% block content %}

<section class="search-products container">
    
    <aside>
        <div class="header">
            <h2>Computador</h2>
            <p>12 encontrados</p>
        </div>

        <nav class="categories">
            <h4>Categorias</h4>
            <ul>
                <li><a href="#">Quadrinhos</a></li>
                <li><a href="#">Bonecos</a></li>
            </ul>
        </nav>
    </aside>

    <div class="items">
        {% for product in products %}
            <div class="product">
                <div class="image"
                    style="background-image: url('{{product.img if product.img else '//placehold.it/500x500?text=Produto sem imagem'}}')"
                >
                </div>

                {% if product.oldPrice != product.price %}
                    <div class="old-price">{{product.oldPrice}}</div>
                {% endif %}

                <p>{{product.price}}</p>
                <h4>{{product.name}}</h4>

                <a href="/products/{{product.id}}" class="button">Ver Produto</a>


            </div>
        {% endfor %}
    </div>
</section>

{% endblock content %}