{% extends "layout.njk" %}
{% import "parts/card.njk" as cards %}


{% block content %}

    {% if (products.length < 1)%}

        {% call cards.render("", "cart-empty container") %}
            <p>Nenhum produto cadastrado no momento.</p>
            <a href="/ads/create" class="button" id="buy-btn">Cadastre um produto agora</a>
        {% endcall %}

    {% else %}
        {% call cards.render("Meus An√∫ncios", "users-ads container") %}

            <div class="items">
                {% for product in products %}
                    <div class="item">
                        <div class="image" style="background-image: url({{product.img}})"></div>

                        <div class="info">
                            <div class="title">{{product.name}}</div>
                            <div class="price">{{product.formattedPrice}}</div>
                            <div class="published">Publicado em {{product.formattedCreate}}</div>

                            <div class="actions">
                                <a href="/products/{{product.id}}/edit">Editar</a>
                                <a href="/products/{{product.id}}">Ver</a>
                            </div>
                        </div>                   

                    </div>
                {% endfor %}
            </div>

        {% endcall %}
    {% endif %}

{% endblock content %}